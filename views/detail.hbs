  <h1>Show detail > {{ this.title }}</h1>  

  <div class="detail">
    <p><strong>Year:</strong> {{ this.year }}</p>
    <p><strong>Description:</strong> {{ this.description }}</p>
    <img width="400px" src="{{this.image}}" alt="{{this.title}}" />
    <p><strong>Cast:</strong> {{ this.cast }}</p>
    <p><strong>Director:</strong> {{ this.director }}</p>

    <a class="edit-btn" href="/shows/edit/{{this._id}}">Edit 📝</a>

    <form method="POST" action="/shows/delete/{{this._id}}">
      <button type="submit">Delete 🗑</button>
    </form>

    {{!-- <a href="/shows/delete/{{this._id}}">Delete 🗑</a> --}}
  </div>